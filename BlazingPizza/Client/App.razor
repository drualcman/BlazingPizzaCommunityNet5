<CascadingAuthenticationState>    
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="typeof(MainLayout)">
                <NotAuthorized>
                    <RedirectToLogin />
		        </NotAuthorized>
                <Authorizing>
                    <div class="main">
                        Por favor espere...
			        </div>
		        </Authorizing>
	        </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="main">
                    <p>Lo lamentamos, el recurso solicitado no ha sido encontrado.</p>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>